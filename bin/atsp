#! /bin/sh

THIS_SCRIPT=$(readlink -f "$0")
THIS_SCRIPT_DIR=$(dirname "${THIS_SCRIPT}")

ATSP_ROOT=$(realpath "${THIS_SCRIPT_DIR}/..")

ATSP_TASK="${ATSP_ROOT}"/task

########################################################################

task_script_path="$1"
task_script_name="$(basename "${task_script_path}")"

shift

"${ATSP_TASK}/${task_script_name}" "$@"
